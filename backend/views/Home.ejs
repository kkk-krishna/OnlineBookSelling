      <script>
        let currentIndex = 0;
const totalAuthors = document.querySelectorAll('.authors').length;
const authorsWrapper = document.getElementById('authorsWrapper');
const authorWidth = document.querySelector('.authors').offsetWidth;

function scrollAuthors(direction) {
  currentIndex = (currentIndex + direction + totalAuthors) % totalAuthors;
  const scrollAmount = -currentIndex * authorWidth;

  authorsWrapper.style.transition = 'transform 1s ease';
  authorsWrapper.style.transform = `translateX(${scrollAmount}px)`;

  if (currentIndex === totalAuthors - 1 && direction === 1) {
    setTimeout(() => {
      authorsWrapper.style.transition = '';
      authorsWrapper.style.transform = 'translateX(0)';
      currentIndex = 0;
    }, 500); 
  }
  if (currentIndex === 0 && direction === -1) {
    setTimeout(() => {
      authorsWrapper.style.transition = '';
      authorsWrapper.style.transform = `translateX(-${totalAuthors * authorWidth}px)`;
      currentIndex = totalAuthors - 1;
    }, 500);
  }
}
      </script>
